<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#329343"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_margin="60dp"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment Uno"
        android:textAlignment="center"
        android:textSize="20dp"
         />

    <EditText
        android:id="@+id/edit_f1_nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Introduce nombre"
        />

    <EditText
        android:id="@+id/edit_f1_apellido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Introduce Apellido"
        />

    <EditText
        android:id="@+id/edit_f1_telefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Introduce Telefono"
        android:inputType="phone"
         />

    <EditText
        android:id="@+id/edit_f1_sexo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Introduce sexo (H/M)"
        />

    <Button
        android:id="@+id/boton_f1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="aÃ±adir"
       />

</LinearLayout>